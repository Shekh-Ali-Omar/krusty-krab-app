<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Krusty Krab - Employees</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <header>
      <h1>Employees</h1>
      <nav class="navbar">
        <a href="/" class="nav-link"><i class="fa-solid fa-house"></i> Home</a>
        <a href="/employees" class="nav-link active"><i class="fa-solid fa-user-ninja"></i> Employees</a>
        <a href="/customers-orders" class="nav-link"><i class="fa-solid fa-users"></i> Customers & Orders</a>
        <a href="/menu-items" class="nav-link"><i class="fa-solid fa-burger"></i> Menu Items</a>
      </nav>
    </header>

    <main>
      <section class="toolbar">
        <div class="toolbar-left">
          <h2>Employee Directory</h2>
          <p class="section-subtitle">Manage your Bikini Bottom crew.</p>
        </div>
        <div class="toolbar-right">
          <input
            type="text"
            id="employeeSearch"
            class="search-input"
            placeholder="Search employees by name or position..."
          />
          <button
            type="button"
            class="btn primary"
            data-open-modal="employeeModal"
          >
            <i class="fa-solid fa-plus"></i> Add Employee
          </button>
        </div>
      </section>

      <section>
        <% if (employees && employees.length) { %>
          <div class="table-wrapper">
            <table id="employeeTable">
              <thead>
                <tr>
                  <th>Employee ID</th>
                  <th>Name</th>
                  <th>Position</th>
                  <th>Salary</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% employees.forEach(function(e) { %>
                  <tr data-name="<%= e.name.toLowerCase() %>" data-position="<%= e.position.toLowerCase() %>">
                    <td><%= e.employeeID %></td>
                    <td><%= e.name %></td>
                    <td><%= e.position %></td>
                    <td>$<%= e.salary.toFixed(2) %></td>
                    <td class="actions-cell">
                      <button
                        type="button"
                        class="icon-btn"
                        data-open-modal="employeeModal"
                        data-id="<%= e._id %>"
                        data-employee='<%- JSON.stringify(e) %>'
                      >
                        <i class="fa-solid fa-pen-to-square"></i>
                      </button>
                      <button
                        type="button"
                        class="icon-btn danger"
                        data-delete-endpoint="/api/employees/<%= e._id %>"
                      >
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No employees found.</p>
        <% } %>
      </section>

      <!-- Employee modal -->
      <div class="modal" id="employeeModal" aria-hidden="true">
        <div class="modal-backdrop" data-close-modal></div>
        <div class="modal-dialog">
          <header class="modal-header">
            <h2 id="employeeModalTitle">Add Employee</h2>
            <button class="icon-btn" type="button" data-close-modal>
              <i class="fa-solid fa-xmark"></i>
            </button>
          </header>
          <form
            id="employeeForm"
            action="/api/employees"
            method="post"
            class="modal-body"
          >
            <input type="hidden" name="_method" value="post" />
            <label>
              Employee ID
              <input type="number" name="employeeID" required />
            </label>
            <label>
              Name
              <input type="text" name="name" required />
            </label>
            <label>
              Position
              <input type="text" name="position" required />
            </label>
            <label>
              Salary
              <input type="number" name="salary" step="0.01" required />
            </label>
            <footer class="modal-footer">
              <button type="button" class="btn ghost" data-close-modal>Cancel</button>
              <button type="submit" class="btn primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Save
              </button>
            </footer>
          </form>
        </div>
      </div>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>



<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Krusty Krab - Customers & Orders</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <header>
      <h1>Customers & Orders</h1>
      <nav class="navbar">
        <a href="/" class="nav-link"><i class="fa-solid fa-house"></i> Home</a>
        <a href="/employees" class="nav-link"><i class="fa-solid fa-user-ninja"></i> Employees</a>
        <a href="/customers-orders" class="nav-link active"><i class="fa-solid fa-users"></i> Customers & Orders</a>
        <a href="/menu-items" class="nav-link"><i class="fa-solid fa-burger"></i> Menu Items</a>
      </nav>
    </header>

    <main>
      <section class="toolbar">
        <div class="toolbar-left">
          <h2>Customers</h2>
          <p class="section-subtitle">Your beloved Bikini Bottom regulars.</p>
        </div>
        <div class="toolbar-right">
          <button
            type="button"
            class="btn primary"
            data-open-modal="customerModal"
          >
            <i class="fa-solid fa-user-plus"></i> Add Customer
          </button>
        </div>
      </section>

      <section class="split-layout">
        <div class="split-column">
          <% if (customers && customers.length) { %>
            <ul class="card-list">
              <% customers.forEach(function(c) { %>
                <li class="card customer-card">
                  <div class="card-header">
                    <h3><%= c.name %></h3>
                    <span class="badge">ID: <%= c.customerID %></span>
                  </div>
                  <p><i class="fa-solid fa-envelope"></i> <%= c.contactInfo %></p>
                </li>
              <% }); %>
            </ul>
          <% } else { %>
            <p>No customers found.</p>
          <% } %>
        </div>

        <div class="split-column">
          <div class="split-header">
            <h2>Orders</h2>
            <button
              type="button"
              class="btn primary"
              data-open-modal="orderModal"
            >
              <i class="fa-solid fa-receipt"></i> New Order
            </button>
          </div>
          <% if (orders && orders.length) { %>
            <div class="table-wrapper">
              <table>
                <thead>
                  <tr>
                    <th>Order</th>
                    <th>Customer ID</th>
                    <th>Menu Items</th>
                    <th>Quantities</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% orders.forEach(function(o) { %>
                    <tr>
                      <td>#<%= o.orderID %></td>
                      <td><%= o.customerID %></td>
                      <td><%= o.menuItemIDs.join(', ') %></td>
                      <td><%= o.quantity.join(', ') %></td>
                      <td><%= new Date(o.date).toLocaleDateString() %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <p>No orders found.</p>
          <% } %>
        </div>
      </section>

      <!-- Customer modal -->
      <div class="modal" id="customerModal" aria-hidden="true">
        <div class="modal-backdrop" data-close-modal></div>
        <div class="modal-dialog">
          <header class="modal-header">
            <h2>Add Customer</h2>
            <button class="icon-btn" type="button" data-close-modal>
              <i class="fa-solid fa-xmark"></i>
            </button>
          </header>
          <form
            action="/api/customers"
            method="post"
            class="modal-body"
          >
            <label>
              Customer ID
              <input type="number" name="customerID" required />
            </label>
            <label>
              Name
              <input type="text" name="name" required />
            </label>
            <label>
              Contact Info
              <input type="text" name="contactInfo" required />
            </label>
            <footer class="modal-footer">
              <button type="button" class="btn ghost" data-close-modal>Cancel</button>
              <button type="submit" class="btn primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Save
              </button>
            </footer>
          </form>
        </div>
      </div>

      <!-- Order modal (simple version) -->
      <div class="modal" id="orderModal" aria-hidden="true">
        <div class="modal-backdrop" data-close-modal></div>
        <div class="modal-dialog">
          <header class="modal-header">
            <h2>New Order</h2>
            <button class="icon-btn" type="button" data-close-modal>
              <i class="fa-solid fa-xmark"></i>
            </button>
          </header>
          <form
            action="/api/orders"
            method="post"
            class="modal-body"
          >
            <label>
              Order ID
              <input type="number" name="orderID" required />
            </label>
            <label>
              Customer ID
              <input type="number" name="customerID" required />
            </label>
            <label>
              Menu Item Names (comma separated)
              <input type="text" name="menuItemIDs" placeholder="Krabby Patty, Kelp Fries" required />
            </label>
            <label>
              Quantities (comma separated)
              <input type="text" name="quantity" placeholder="2,1" required />
            </label>
            <label>
              Date
              <input type="date" name="date" required />
            </label>
            <footer class="modal-footer">
              <button type="button" class="btn ghost" data-close-modal>Cancel</button>
              <button type="submit" class="btn primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Save
              </button>
            </footer>
          </form>
        </div>
      </div>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>


